<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInOut.SignUpActivity">

    <EditText
        android:id="@+id/editNachname"
        android:layout_width="390dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nachname"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editVorname" />

    <EditText
        android:id="@+id/editVorname"
        android:layout_width="390dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Vorname"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="385dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="E-Mail"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editPasswort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNachname" />

    <EditText
        android:id="@+id/editFavoriteClub"
        android:layout_width="393dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Favorite Club"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegisterUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfirmPasswort" />

    <EditText
        android:id="@+id/editPasswort"
        android:layout_width="387dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="277dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:hint="Passwort"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editConfirmPasswort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editConfirmPasswort"
        android:layout_width="388dp"
        android:layout_height="54dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="Confirm Passwort"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editFavoriteClub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPasswort" />

    <Button
        android:id="@+id/buttonRegisterUser"
        android:layout_width="277dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:gravity="center"
        android:layout_marginBottom="76dp"
        android:text="Register User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>